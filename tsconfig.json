{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
   "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules", "dist", "build"]
}
