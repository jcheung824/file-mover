{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
